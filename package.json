{
  "name": "computer-vision-app",
  "version": "1.0.0",
  "description": "RÃ©pertoire d'applications Python de Computer Vision",
  "main": "src/main.js",
  "homepage": "https://github.com/web-app-ia/vision2",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-app-ia/vision2.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "publish": "electron-builder --publish=always",
    "pack": "electron-builder --dir",
    "dist": "npm run build"
  },
  "keywords": [
    "electron",
    "computer vision",
    "python",
    "opencv",
    "mediapipe",
    "games"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-store": "^8.0.0",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.cvapp.desktop",
    "productName": "Computer Vision App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "python-apps/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [{
        "target": "portable",
        "arch": ["x64"]
      }],
      "icon": "assets/icon.ico",
      "publish": {
        "provider": "github",
        "owner": "web-app-ia",
        "repo": "vision2"
      },
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
